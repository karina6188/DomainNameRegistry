@page
@model DomainRegistry.Pages.IndexModel
@{
    ViewData["Title"] = "Domain Name Registry System";
}

<div class="container w-80">
    <h1>Register Domain Name</h1>

    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Input.DomainName">Domain Name</label>
                <input asp-for="Input.DomainName" type="text" class="form-control" id="inputDomain-Name" placeholder="Domain Name">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Input.Period">Period of Registration(years)</label>
                <input asp-for="Input.Period" type="number" class="form-control" id="inputPeriod" placeholder="Year" min="1" max="5">
            </div>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Input.Provider">Verification Provider</label>
            <select asp-for="Input.Provider" id="inputProvider" class="form-control">
                <option selected value="">Choose...</option>
                <option value="A">Provider-A</option>
                <option value="B">Provider-B</option>
                <option value="C">Provider-C</option>
                <option value="D">Provider-D</option>
                <option value="E">Provider-E</option>
                <option value="F">Provider-F</option>
                <option value="G">Provider-G</option>
                <option value="H">Provider-H</option>
                <option value="I">Provider-I</option>
                <option value="J">Provider-J</option>
                <option value="K">Provider-K</option>
                <option value="L">Provider-L</option>
                <option value="M">Provider-M</option>
                <option value="N">Provider-N</option>
                <option value="O">Provider-O</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Input.ContactID">Contact ID</label>
            <input asp-for="Input.ContactID" type="text" class="form-control" id="inputContactId" placeholder="Contact ID">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

