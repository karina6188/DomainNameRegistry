@page
@model DomainRegistry.Pages.IndexModel
@{
    ViewData["Title"] = "Domain Name Registry System";
}

    <div class="container w-80">
        <h1>Register Domain Name</h1>

        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.DomainName">Domain Name</label>
                    <input asp-for="Input.DomainName" type="text" class="form-control" id="inputDomain-Name" placeholder="Domain Name">
                    <asp:RangeValidator ID="rvclass" runat="server" ControlToValidate="txtclass"
                                        ErrorMessage="Domain name needs to be at least 10 characters long" MaximumValue="30"
                                        MinimumValue="10" Type="text">
                    </asp:RangeValidator>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Period">Period of Registration (years)</label>
                    <input asp-for="Input.Period" type="number" class="form-control" id="inputPeriod" placeholder="Year">
                </div>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Input.Provider">Verification Provider</label>
                <select asp-for="Input.Provider" id="inputProvider" class="form-control">
                    <option selected>Choose...</option>
                    <option>Provider-A</option>
                    <option>Provider-B</option>
                    <option>Provider-C</option>
                    <option>Provider-D</option>
                    <option>Provider-E</option>
                    <option>Provider-F</option>
                    <option>Provider-G</option>
                    <option>Provider-H</option>
                    <option>Provider-I</option>
                    <option>Provider-J</option>
                    <option>Provider-K</option>
                    <option>Provider-L</option>
                    <option>Provider-M</option>
                    <option>Provider-N</option>
                    <option>Provider-O</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.ContactID">Contact ID</label>
                <input asp-for="Input.ContactID" type="text" class="form-control" id="inputContactId" placeholder="Contact ID">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

