@page "{id?}"
@model DomainRegistry.Pages.RenewModel
@{
    ViewData["Title"] = "Renew";
}

<div class="container">
    <h1>Renew Domain Name</h1>
    <div class="row">
        <div class="col">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Domain.DomainName" class="control-label"></label>
                        <input asp-for="@Model.Domain.DomainName" class="form-control" name="DomainName" />
                        <span asp-validation-for="@Model.Domain.DomainName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Domain.Period" class="control-label"></label>
                        <input asp-for="@Model.Domain.Period" class="form-control" name="Period" type="number" min="1" max="5"/>
                        <span asp-validation-for="@Model.Domain.Period" class="text-danger"></span>
                    </div>
                </div>
                <div> </div>
                <a href="/DomainInformation/@Model.Domain.ID">Back to Domain Information</a>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>